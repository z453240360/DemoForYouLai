<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yl.crazy.mydongtest.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:text="嵌套列表页1"
        android:id="@+id/ben"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="嵌套列表页2"
        android:id="@+id/ben2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="嵌套列表页3"
        android:id="@+id/ben3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="嵌套列表页4"
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="购物车列表"
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="商品详情"
        android:id="@+id/btn6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.yl.crazy.mydongtest.view.MyImageView
        android:id="@+id/mImg"
        android:scaleType="fitXY"
        android:background="#8a8a"
        android:src="@mipmap/timg"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <com.yl.crazy.mydongtest.view.MyView
        android:id="@+id/mImg2"
        android:scaleType="fitXY"
        android:background="#8a8"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <ImageView
        android:id="@+id/mImg3"
        android:scaleType="fitXY"
        android:background="#8a8a"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    </LinearLayout>
</ScrollView>
